<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="play.level1.controller.FragenControlle">
  <children>
    <VBox layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="700.0">
      <children>
        <Label fx:id="questionLabel" alignment="BOTTOM_LEFT" contentDisplay="LEFT" prefHeight="110.0" prefWidth="563.0" text="Frage">
          <font>
            <Font size="18.0" fx:id="x1" />
          </font>
          <VBox.margin>
            <Insets bottom="20.0" left="60.0" top="30.0" />
          </VBox.margin>
        </Label>
        <Button fx:id="answerABtn" alignment="CENTER_LEFT" font="$x1" mnemonicParsing="false" onAction="#chooseAnswerHandler" prefHeight="60.0" prefWidth="500.0" text="Button">
          <VBox.margin>
            <Insets bottom="10.0" left="60.0" top="5.0" fx:id="x2" />
          </VBox.margin>
        </Button>
        <Button fx:id="answerBBtn" alignment="CENTER_LEFT" font="$x1" mnemonicParsing="false" onAction="#chooseAnswerHandler" prefHeight="60.0" prefWidth="500.0" text="Button" VBox.margin="$x2" />
        <Button fx:id="answerCBtn" alignment="CENTER_LEFT" font="$x1" mnemonicParsing="false" onAction="#chooseAnswerHandler" prefHeight="60.0" prefWidth="500.0" text="Button" VBox.margin="$x2" />
        <Button fx:id="answerDBtn" alignment="CENTER_LEFT" font="$x1" mnemonicParsing="false" onAction="#chooseAnswerHandler" prefHeight="60.0" prefWidth="500.0" text="Button" VBox.margin="$x2" />
        <Button fx:id="goOnBtn" contentDisplay="CENTER" disable="true" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="Weiter">
          <font>
            <Font name="System Bold" size="20.0" />
          </font>
          <VBox.margin>
            <Insets left="520.0" top="40.0" />
          </VBox.margin>
        </Button>
      </children>
    </VBox>
  </children>
</AnchorPane>
